map $http_upgrade $connection_upgrade {
  default upgrade;
  ''      close;
}

server {
	listen 80;
  root /srv/www/public_html;
  
  location /rstudio/ {
    rewrite ^/rstudio/(.*)$ /$1 break;
    proxy_pass         http://localhost:8787;
    proxy_redirect     http://$proxy_host $scheme://$http_host/rstudio;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection $connection_upgrade;
    proxy_read_timeout 20d;
  }

  location /jupyter/ {
    #rewrite ^/jupyter/(.*)$ /$1 break;
    proxy_pass         http://localhost:8000;
    proxy_redirect     http://$proxy_host $scheme://$http_host/jupyter;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection $connection_upgrade;
    proxy_read_timeout 20d;
  }

  location /pgstudio/ {
    proxy_pass         http://localhost:8080/;
    proxy_redirect     http://$proxy_host $scheme://$http_host/pgstudio;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header   Upgrade $http_upgrade;
    proxy_set_header   Connection $connection_upgrade;
    proxy_read_timeout 20d;
  }
}
